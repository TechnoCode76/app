{
  "name": "soundslice",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "NODE_ENV=production node server/index.js",
    "dev": "npm run build:dev; npm run watch & nodemon --watch 'dist' --watch 'server' --watch 'shared/views' server/index.js;",
    "watch": "chokidar 'assets/**/*.scss' 'client/*.js' 'shared/**/*' -i 'shared/views/*' -c 'npm run build:dev'",
    "prettier": "prettier --write --trailing-comma es5 --single-quote --print-width 80 'shared/**/*.js' 'client/**/*.js' 'server/**/*.js' 'lib/**/*.js' && npm run lint -- --fix",
    "lint": "eslint 'shared/**/*.js' 'server/**/*.js' 'client/**/*.js' 'lib/**/*.js'",
    "build:dev": "NODE_ENV=development npm run build;",
    "build:prod": "NODE_ENV=production npm run build;",
    "build": "rm -rf dist; mkdir -p dist/stylesheets; npm run sass; npm run views; npm run webpack;",
    "webpack": "webpack",
    "views": "./bin/generate-views.sh",
    "sass": "node-sass assets/styles/main.scss --include-path node_modules --output-style compressed > dist/stylesheets/main.css",
    "test": "echo \"Error: no test specified\" && exit 1",
    "release": "echo \"Error: no release script specified\" && exit 1",
    "postinstall": "[ -z \"$VHOST\" ] && exit 0; npm run build:prod && npm prune --production",
    "deploy": "ssh $SOUNDSLICE_DEPLOY deploy default.git"
  },
  "author": "",
  "license": "ISC",
  "config": {
    "NODE_ENV": "development"
  },
  "dependencies": {
    "document-register-element": "^1.10.0",
    "express": "^4.16.3",
    "flatstate": "^0.1.1",
    "glob": "^7.1.3",
    "hyperhtml-app": "^0.2.1",
    "hypermorphic": "^0.6.3",
    "lodash": "^4.17.11",
    "multiparty": "^4.1.4",
    "pg": "^7.4.3",
    "punycode": "1.4.1",
    "serve-favicon": "^2.5.0",
    "serve-static": "^1.13.2"
  },
  "devDependencies": {
    "chokidar-cli": "^1.2.0",
    "eslint": "^5.0.1",
    "node-sass": "^4.9.0",
    "nodemon": "^1.17.5",
    "normalize.css": "^8.0.0",
    "prettier": "^1.14.2",
    "webpack": "^4.12.2",
    "webpack-cli": "^3.0.8"
  }
}
